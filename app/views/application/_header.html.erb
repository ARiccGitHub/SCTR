<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <%= link_to "SCTR", root_path, class: "navbar-brand text-secondery" %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if account_signed_in?%>
        <li class="nav-item textColorGray mt-2">Hello <%= current_account.first_name %></li>
      <% elsif admin_signed_in?%>
        <li class="nav-item textColorGray mt-2">Hello Admin <%= current_admin.first_name %></li>
      <% end %>
    </ul>

    <form class="form-inline my-2 my-lg-0">
