<div class="d-flex flex-row justify-content-around">
  <!-- Customer -->
  <div class="card shadow" style="width: 18rem">
    <div class="card-header bg-white">
      <h5>Customer</h5>
    </div>
    <ul class="list-unstyled">
      <li><%= link_to "Index", customers_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
      <li><%= link_to "New", new_customer_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
    </ul>
  </div>
  <!-- Locations -->
  <div class="card shadow" style="width: 18rem">
    <div class="card-header bg-white">
      <h5>Location</h5>
    </div>
    <ul class="list-unstyled">
      <li><%= link_to "Index", locations_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
      <li><%= link_to "New", select_customer_new_location_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
    </ul>
  </div>
  <!-- Machines -->
  <div class="card shadow" style="width: 18rem">
    <div class="card-header bg-white">
      <h5>Machine</h5>
    </div>
    <ul class="list-unstyled">
      <li><%= link_to "Index", machines_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
      <li><%= link_to "New", select_customer_new_machine_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
    </ul>
  </div>
  <!-- Customer's accounts -->
  <div class="card shadow" style="width: 18rem">
    <div class="card-header bg-white">
      <h5>Account</h5>
    </div>
    <ul class="list-unstyled">
      <li><%= link_to "Index", adminbord_accounts_path(1), class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
      <li><%= link_to "New",select_customer_new_account_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2'  %></li>
    </ul>
  </div>
  <!-- Services call -->
  <div class="card shadow" style="width: 18rem">
    <div class="card-header bg-white">
      <h5>Service Call</h5>
    </div>
    <ul class="list-unstyled">
      <li><%= link_to "Index", service_calls_path, class: 'btn btn-light w-100 mt-2 shadow-sm p-2' %></li>
      <li><%= link_to "Delete", service_calls_path, class: 'btn btn-light w-100  mt-2 shadow-sm p-2' %></li>
    </ul>
