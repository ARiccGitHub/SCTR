
<!-- account Index -->

  <h1 class="card-header shadow-sm">Account Index</h1>
  <%= paginate @accounts %>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Customer#</th>
        <th scope="col">Customer Name</th>
        <th scope="col">Email</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.customer_number %></td>
        <td><%= account.customer.bus_name %></td>
        <td><%= account.email %></td>
        <td><%= account.first_name %></td>
        <td><%= account.last_name%></td>
        <td><%= link_to "Show", show_account_register_path(account),
          class: "btn-sm btn-info mt-2  p-1"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @accounts %>
