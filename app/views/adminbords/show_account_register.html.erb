<div class="p-2">
<!-- Buffer Block -->
</div>
<h2 class="card-header shadow-sm">Customer Account</h2>
<div class="p-3">
<!-- Buffer Block -->
</div>
<div class="card w-50 shadow">
  <div class="card-body d-flex flex-row justify-content-between ">
    <div>
      <div>
        <h6 class="pt-3 pr-3"><%= @account.customer.bus_name %></h6>
        <h6 class="pt-3 pr-3">Tel:&#160;<%= @account.customer.phone %></h6>
      </div>
    </div>
    <div>
      <h6 class="pt-3 pr-3"><%= @account.customer_number %></h6>
        <%= link_to "Edit", edit_account_register_path(@account), class: 'btn btn-outline-success' %>
    </div>
  </div>
</div>
<!--Account Info -->
<div class="card w-50">
  <h5 class="card-header"></h5>
  <div class="card-body">
    <!-- Name -->
      <div class="d-flex flex-row justify-content-between">
        <div>
          <p class="card-text"><strong>Title:&#160;</strong><%= @account.title %></p>
          <p class="card-text"><strong>First name:&#160;</strong><%= @account.first_name %></p>
          <p class="card-text"><strong>Last name:&#160;</strong><%= @account.last_name %></P>
        </div>
        <!-- Phone and email -->
        <div class="mr-3">
          <p class="card-text"></p>
          <p class="card-text"><strong>Email:&#160;</strong> <%= @account.email %></p>
      </div>
    </div>
  </div><!-- card-body -->
  <%= link_to "Add Location", select_account_locations_adminbords_path(@account), class: 'btn btn-info' %>
</div><!-- card -->
<div class="p-2">
<!-- Buffer Block -->
</div>
<h2 class="card-header shadow-sm">Account's locations</h2>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Customer#</th>
      <th scope="col">Customer Name</th>
      <th scope="col">Location Name</th>
      <th scope="col">Contact</th>
      <th scope="col">Phone</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @account.locations.each do |location| %>
      <tr>
        <td><%= location.customer_number %></td>
        <td><%= location.customer.bus_name %></td>
        <td><%= location.name %></td>
        <td><%= location.contact__first_name %></td>
        <td><%= location.contact_phone%></td>
        <td><%= link_to "Show", location_path(location),
          class: "btn-sm btn-info  mt-2  p-1"%></td>
      </tr>
  <% end %>
  </tbody>
</table>
