
<div class="p-3">
<!-- Buffer Block -->
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="card w-50" >
    <h5 class="card-header formHeadBlockSizing">Admin log in</h5>

    <div class="card-body">
      <div class="d-flex flex-column">
        <p class="card-title">Email:</p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-sm" %>*</p>
        <p></p>
        <h4 class="card-title">Passwords</h4>
        <p class="card-text "><%= f.password_field :password, autocomplete: "off", class: "form-control-sm w-25" %></p>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
    </div><!-- card-body -->
    <%= f.submit "Log in", class: "btn btn-info" %>
  </div><!-- card -->
<% end %>
<%= render "admins/shared/links" %>
