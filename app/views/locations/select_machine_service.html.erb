<!--
Select machine to service
 -->
<h3 class="card-header">Select the machine to service</h3>
<div class="p-3">
<!-- Buffer Block -->
</div>
<div class="card w-50 shadow">
  <div class="card-body d-flex flex-row justify-content-between ">
    <div>
      <div>
        <h6 class="pt-3 pr-3"><%= current_account.customer.bus_name %></h6>
        <h6 class="pt-3 pr-3">Tel:&#160;<%= current_account.customer.phone %></h6>
      </div>
    </div>
    <div>
      <h6 class="pt-3 pr-3"><%= current_account.customer_number %></h6>
    </div>
  </div>
</div>
<div class="card w-50">
  <h5 class="card-header"><%= current_account.first_name %></h5>
  <div class="card-body">
    <!-- Name -->
      <div class="d-flex flex-row justify-content-between">
        <div>
          <p class="card-text"><strong>Title:&#160;</strong><%= current_account.title %></p>
          <p class="card-text"><strong>First name:&#160;</strong><%= current_account.first_name %></p>
          <p class="card-text"><strong>Last name:&#160;</strong><%= current_account.last_name %></P>
        </div>
        <!-- Phone and email -->
        <div class="mr-3">
          <p class="card-text"></p>
          <p class="card-text"><strong>Email:&#160;</strong> <%= current_account.email %></p>
      </div>
    </div>
  </div>
</div>
<%= paginate @locations %>
<% @locations.each do |location| %>
<h6 class="card-header shadow-sm">Location: <%= location.name %></h6>
<h3 class="card-header">Locations</h3>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Customer's number</th>
      <th scope="col">Customer's name</th>
      <th scope="col">Machine number</th>
      <th scope="col">Model</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% location.machines.each do |machine| %>
    <tr>
      <td><%= location.customer_number %></td>
      <td><%= location.customer.bus_name %></td>
      <td><%= machine.machine_number%></td>
      <td><%= machine.model%></td>
      <td><%= link_to "Select", new_machine_service_call_path(machine.id),
        class: "btn-sm btn-info  mt-2  p-1"%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
<%= paginate @locations %>
