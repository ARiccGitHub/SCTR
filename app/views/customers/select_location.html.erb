 <div class="p-3">
 <!-- Buffer Block -->
 </div>
<h3 class="card-header shadow-sm">Select a location</h3>
<div class="p-3">
<!-- Buffer Block -->
</div>
<%= paginate @locations %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Customer#</th>
      <th scope="col">Costomer Name</th>
      <th scope="col">Location Name</th>
      <th scope="col">Contact</th>
      <th scope="col">Phone</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.customer_number %></td>
      <td><%= location.customer.bus_name %></td>
      <td><%= location.name %></td>
      <td><%= location.contact__first_name %></td>
      <td><%= location.contact_phone%></td>
      <td><%= link_to "Select",new_customer_location_machine_path(location.customer, location),class: "btn-sm btn-info  mt-2  p-1"%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @locations %>
