<!-- errors management -->
<%  if @service_call.errors.any? %>
 <div class="alert alert-danger" role="alert">
   <p><%= pluralize( @service_call.errors.count, "error") %> Prevented the service call's from being submited</p>
   <ul>
     <% @service_call.errors.messages.each do |field,errors|  %>
       <% errors.each do |error| %>
         <li> Problems with <%= field %>: <%= error %></li>
       <% end %>
     <% end %>
   </ul>
 </div>
<% end %>

<div class="p-3">
<!-- Buffer Block -->
</div>

<!-- Machine's form, edit/new -->

<!-- Customer Number name phone -->
<div class = "ml-5">
<div class="card w-75 shadow">
  <div class="card-body d-flex flex-row justify-content-between">
    <div>
      <div>
        <h6 class="pt-3 pr-3"><%= @service_call.machine.location.customer.bus_name %></h6>
        <h6 class="pt-3 pr-3">Location:&#160;<%= @service_call.machine.location.name%></h6>
        <h6 class="pt-3 pr-3">Tel:&#160;<%= @service_call.machine.location.phone%></h6>
      </div>
    </div>
    <div>
      <h6 class="pt-3 pr-3">Customer number: <%= @service_call.customer_number %></h6>
      <h6 classclass="pt-3 pr-3"> <%= @service_call.account.first_name %> <%= @service_call.account.last_name %> </h6>
      <h6 classclass="pt-3 pr-3"> <%= @service_call.account.email %></h6>
    </div>
  </div>
</div>


  <!-- machines Name -->
  <div class="card w-75 shadow" >
    <div class="card-header d-flex flex-row justify-content-between">
      <div><h6>Machines#:&#160;<%= @service_call.machine.machine_number %></h6>
      <h5>Model:&#160;<%= @service_call.machine.model %></h5></div>
      <h5 class="ml-5">location:&#160;<%= @service_call.machine.on_location %></h5>
    </div>
    <div class="card-body d-flex justify-content-center">
      <div class="d-flex flex-column form-group">
        <p class="card-text">Describe the issue:</p>
        <p class="card-text"><%= @service_call.description %></p>
      </div>
    </div><!-- card-body -->
  </div><!-- card -->
</div>
